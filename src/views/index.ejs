<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NodeJS Basic</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="topnav">
      <a class="active" href="#home">Home</a>
      <a href="#news">News</a>
      <a href="#contact">Contact</a>
      <a href="#about">About</a>
    </div>

    <div style="padding-left: 16px;">

      <h2>List users Table</h2>

      <p>Move the mouse over the table rows to see the effect.</p>

      <table>
        <thead>
          <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          
          <% for(let i = 0; i < dataUser.length; i++) { %>
            <tr>
              <td><%= dataUser[i].id %></td>
              <td><%= dataUser[i].firstName %></td>
              <td><%= dataUser[i].lastName %></td>
              <td>
                <a class="button" href="/detail/user/<%=dataUser[i].id %>" target="_blank">Detail</a>
                <button class="button" type="button">Edit</button>
                <button class="button" type="button">Detail</button>
              </td>
            </tr>
          <%} %>
        </tbody>
      </table>
    </div>
    <div class="create-user-container">
      <form action="/create-new-user" method="post">
        <div></div><b>Create a user</b>
        <div>
          <label>FirstName</label>
          <input type="text" name="firstName">
        </div>
        <div>
          <label>LastName</label>
          <input type="text" name="lastName">
        </div>
        <div>
          <label>Email</label>
          <input type="email" name="email">
        </div>
        <div>
          <label>Address</label>
          <input type="text" name="address">
        </div>
        <div>
          <button class="btn-submit" type="submit">Submit</button>
        </div>
      </form>
      
    </div>
  </body>
</html>
